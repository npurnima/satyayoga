<div class="header-breadcrumbs" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <%= link_to 'Home', homepages_path %>  > <%= 'My page' %>
</div>

<div class="leftbar">

  <%= render 'homepages/mypage_leftbar_options' %>

</div>

<div class="main-content">
  <p id="notice"><%= notice %></p>
  <div class="divider"><p></p> <p></p></div>



  <h2>List of all the comments that are been made by <%= session[:username]%></h2>
  <div id="discussion-comments">
        <% @usercomments.each do |expcomment| %>
            <% @commentuser = User.find(expcomment.owner)   %>

            <div class="user-img">
              <%= image_tag(@commentuser.photo,:class => 'img-icon') %>
            </div>
            <div class="user-name">
              <%= link_to @commentuser.firstname.capitalize,user_path(@commentuser.id) %>
              <i><%= distance_of_time_in_words(DateTime.now,expcomment.created_at) %>  ago    <br/> </i>
            </div>
            <div class="user-comment">
              <%= expcomment.description.capitalize %>
              <%= expcomment.no_of_views %>
            </div>
        <% end %>
  </div>

   <%=link_to 'Go Back to Mypage',mypage_path(session[:user_id]) %>
</div>