<h1>Listing emails</h1>

<table>
  <tr>
    <th>Email from</th>
    <th>Email to</th>
    <th>Email subject</th>
    <th>Email cc</th>
    <th>Email bcc</th>
    <th>Email body</th>
    <th>Email attachment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.email_from %></td>
    <td><%= email.email_to %></td>
    <td><%= email.email_subject %></td>
    <td><%= email.email_cc %></td>
    <td><%= email.email_bcc %></td>
    <td><%= email.email_body %></td>
    <td><%= email.email_attachment %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

